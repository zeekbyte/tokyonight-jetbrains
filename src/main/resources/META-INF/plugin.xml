<idea-plugin>

    <id>com.zeekbtye.tokyonight</id>
    <name>Tokyo Night Theme</name>
    <vendor email="" url="https://github.com/zeekbyte">Zeekbyte</vendor>

    <description>
        <![CDATA[
      Tokyo Night theme. I forked from the repository https://github.com/alexadhy/tokyonight-jetbrains and continued to maintain it.
    ]]>
    </description>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <themeProvider order="first" id="day" path="/themes/Day.theme.json"/>
        <themeProvider order="after day" id="storm" path="/themes/Storm.theme.json"/>
        <themeProvider order="after storm" id="com.zeekbyte.tokyonight-moon" path="/themes/Moon.theme.json"/>
        <themeProvider order="last"  id="night" path="/themes/Night.theme.json"/>
    </extensions>

</idea-plugin>
